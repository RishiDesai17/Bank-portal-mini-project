<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
</head>
<body>
    <h1 id="title">TRANSFER MONEY</h1>

    <div class="container" style="box-shadow: 0 0px 20px 0px rgba(0, 0, 0, 0.25); padding-left: 40px; padding-right: 40px; margin-top: 6.5%;">
        <div style="padding: 50px; display: flex; justify-content: center;">
            <form method="POST" onsubmit="return checkform(event)">
                <p>Your Account No.: <b id="my-account"></b></p>
                <div class="input-group mb-3" style="width: 400px;">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroup-sizing-default">Account No.</span>
                    </div>
                    <input type="text" id="accountTo" class="form-control" name="accountTo" placeholder="Enter receiver's Account number">
                </div>
        
                <div class="input-group mb-3" style="width: 400px;">
                    <div class="input-group-prepend">
                      <span class="input-group-text">Rs.</span>
                    </div>
                    <input name="amount" id="amount" placeholder="Enter amount" aria-label="Amount">
                    <div class="input-group-append">
                      <span class="input-group-text">.00</span>
                    </div>
                </div>
                <button type="submit" class="btn btn-danger">Submit</button>
            </form>
        </div>
    </div>
    <% if (locals.message) { %>
		<script>
			alert("<%= message %>")
		</script>
	<% } %>

    <script src="/js/bootstrap.min.js"></script>
    <script>
        document.getElementById("my-account").textContent = window.location.href.split("/")[5]
        function checkform(event) {
            const accountTo = document.getElementById("accountTo").value
            const amount = document.getElementById("amount").value
            if(accountTo.match(/^\d+$/) && amount.match(/^\d+$/)){
                return true
            }
            event.preventDefault()
            alert("Enter values properly")
            return false
        }
    </script>
</body>
</html>