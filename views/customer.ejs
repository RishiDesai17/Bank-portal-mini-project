<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/customer.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400&display=swap" rel="stylesheet">
    <title>Customer</title>
</head>
<body>
    <h1 class="details" id="welcome" style="text-align: center;">WELCOME!</h1>
    <button onclick="changeMode()" class="btn btn-warning" style="position: absolute; right: 30px; top: 30px">CHANGE MODE</button>
    <div class="darkShadow container" style="padding-left: 80px; padding-right: 80px; margin-top: 6.5%;">
        <div class="row">
            <div class="card card-header col-md-6 col-sm-12" style="margin-bottom: 9%; margin-top: 8%; background-color: #ccc;">
                <br>
                <h3 class="details">NAME: <b><%= customer.Name %></b></h3>
                <br>
                <h3 class="details">USERNAME: <b><%= customer.Username %></b></h3>
                <br>
                <h3 class="details">ADDRESS: <b><%= customer.Address %></b></h3>
                <br>
            </div>
            <div class="col-md-6 col-sm-12" style="margin-top: 8%">
                <div class="container" style="margin-top: 11%">
                    <div class="row text-center">
                        <div class="col-md-6 col-sm-12" style="margin-bottom: 20px">
                            <button class="btn btn-primary" onclick="javascript:window.location.href = `${window.location.href.split('/')[4]}/my-accounts`">View accounts</button>
                        </div>
                        <div class="col-md-6 col-sm-12" style="margin-bottom: 20px">
                            <button class="btn btn-primary" onclick="javascript:window.location.href = `/transactions/${window.location.href.split('/')[4]}`">My Transactions</button>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-md-6 col-sm-12">
                            <button class="btn btn-success" onclick="javascript:window.location.href = `/loans/${window.location.href.split('/')[4]}`">Loans history</button>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <button class="btn btn-success" onclick="javascript:window.location.href = `/loans/request-loan/${window.location.href.split('/')[4]}`">Apply for loan</button>
                        </div>
                    </div>
                    <div class="row text-center" style="margin-top: 20px;">
                        <div class="col-md-12">
                            <button class="btn btn-danger" onclick="javascript:window.location.href = `/accounts/create-account/${window.location.href.split('/')[4]}`">Create Account</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function changeMode() {
            const isDarkMode = JSON.parse(localStorage.darkMode)
            setMode(!isDarkMode)
            localStorage.setItem("darkMode", !isDarkMode)
        }
        function setMode(isDark){
            if(!isDark){
                document.getElementsByTagName("body")[0].classList.remove("dark")
                document.getElementsByClassName("container")[0].classList.add("darkShadow")
                document.getElementsByClassName("container")[0].classList.remove("whiteShadow")
            }
            else{
                document.getElementsByTagName("body")[0].classList.add("dark")
                document.getElementsByClassName("container")[0].classList.remove("darkShadow")
                document.getElementsByClassName("container")[0].classList.add("whiteShadow")
            }
        }
        setMode(JSON.parse(localStorage.darkMode))
    </script>
</body>
</html>