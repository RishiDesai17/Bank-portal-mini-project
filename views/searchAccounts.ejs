<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/search-accounts.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400&display=swap" rel="stylesheet">
</head>
<body>
    <div style="display: flex; justify-content: center; margin-top: 50px; margin-bottom: 50px;">
        <form method="POST">
            <div class="input-group mb-3">
                <input type="text" name="name" class="form-control" placeholder="Search by name" aria-label="Name">
            </div>
            <div style="display: flex; justify-content: center;">
                <button type="submit" class="btn btn-success">SEARCH</button>
            </div>
        </form>
    </div>

    <div class="container">
        <ul class="responsive-table">
          <li class="table-header">
            <div class="col col-1">Name</div>
            <div class="col col-2">Account_no</div>
            <div class="col col-3">Balance</div>
          </li>
          <% if(locals.accounts) { %>
            <% accounts.forEach(account => { %>
                <li class="table-row">
                    <div class="col col-1" data-label="Customer Name"><%= account.Name %></div>
                    <div class="col col-2" data-label="Account no"><%= account.Account_no %></div>
                    <div class="col col-3" data-label="Amount">Rs. <%= account.Balance %></div>
                </li>
            <% }) %>
          <% } %>
        </ul>
    </div>
</body>
</html>