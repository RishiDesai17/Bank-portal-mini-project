<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/transaction.css">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;400&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 id="title" style="margin-bottom: 30px;">LOANS HISTORY</h1>
        <ul class="responsive-table">
          <li class="table-header">
            <div class="col col-1">Loan Id</div>
            <div class="col col-2">Amount</div>
            <div class="col col-3">Interest</div>
            <div class="col col-4">Status</div>
          </li>
          <% loans.forEach(loan => { %>
            <li class="table-row">
                <div class="col col-1" data-label="Loan Id"><%= loan.Loan_id %></div>
                <div class="col col-2" data-label="Amount">Rs. <%= loan.Amount %></div>
                <div class="col col-3" data-label="Interest">
                    <% if(loan.Accepted === 1) { %>
                        <%= loan.Interest %>%
                    <% } else { %>
                        ---
                    <% } %>
                </div>
                <div class="col col-4" data-label="Account To">
                    <% if(loan.Accepted === null) { %>
                        Pending
                    <% } else if(loan.Accepted === 1) { %>
                        Accepted
                    <% } else { %>
                        Rejected
                    <% } %>
                </div>
            </li>
          <% }) %>
        </ul>
    </div>
</body>
</html>